@{
    ViewBag.Title = "Generate Codes";
}

<h1>Generate Unique 13-Digit Codes</h1>

<form asp-action="GenerateCodes" method="post">
    <input type="hidden" name="companyId" value="@ViewBag.CompanyId" />
    <div class="form-group">
        <label for="count">Number of Codes:</label>
        <input type="number" id="count" name="count" class="form-control" min="1" required />
    </div>
    <div class="form-group">
        <label for="batchNo">Batch Number:</label>
        <input type="number" id="batchNo" name="batchNo" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>
